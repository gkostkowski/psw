
DROP DATABASE IF EXISTS psw;

CREATE DATABASE psw;

USE psw;

CREATE TABLE users
(
   ID int NOT NULL AUTO_INCREMENT PRIMARY KEY,
   login text NOT NULL,
   password text NOT NULL,
   name text,
   age int
);

